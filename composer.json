{
    "name": "linio/common-laminas",
    "description": "Common library for Linio projects using Zend Expressive",
    "keywords": ["linio", "common", "zend-expressive", "expressive"],
    "type": "library",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^7.4",
        "linio/microlog": "^1.0",
        "linio/util": "^4.0",
        "particle/filter": "^1.5",
        "particle/validator": "^2.3",
        "monolog/monolog": "^2.9",
        "mezzio/mezzio": "^3.11",
        "nyholm/psr7": "^1.5",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^9.5",
        "phpspec/prophecy-phpunit": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "eloquent/phony-phpunit": "^7.1"
    },
    "autoload": {
        "files": [
            "src/Support/functions.php"
        ],
        "psr-4": {
            "Linio\\Common\\Mezzio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Linio\\TestAssets\\": "tests/assets",
            "Linio\\Common\\Mezzio\\Tests\\": "tests/"
        }
    },
    "prefer-stable": false,
    "config": {
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true
        }
    }
}
