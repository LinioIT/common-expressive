{
    "name": "linio/common-expressive",
    "description": "Common library for Linio projects using Zend Expressive",
    "keywords": ["linio", "common", "zend-expressive", "expressive"],
    "type": "library",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^7.4",
        "linio/microlog": "^1.0",
        "linio/util": "^3.0",
        "particle/filter": "^1.4",
        "particle/validator": "^2.1",
        "monolog/monolog": "^1.20",
        "mezzio/mezzio": "^3.6",
        "mezzio/mezzio-router": "^3.8",
        "nyholm/psr7": "^1.5"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^9.5",
        "phpspec/prophecy-phpunit": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "eloquent/phony-phpunit": "^7.1"
    },
    "autoload": {
        "files": [
            "src/Support/functions.php"
        ],
        "psr-4": {
            "Linio\\Common\\Expressive\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Linio\\TestAssets\\": "tests/assets",
            "Linio\\Common\\Expressive\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true
        }
    }
}
